.events
	padding 25px 0
	
	h2
		color $green
		text-transform capitalize
		text-align center
		padding 15px 0
		
	&__details
		p
			color $dark	
	&__items
		display flex
		flex-wrap nowrap
		border 1px solid $gray
		align-items center	
		border-radius 2px
		padding 0 20px
		margin 25px 0
		justify-content center
		min-height 183px
		h4
			color lightness( $dark , 50%)
		&:hover
			border-color $green
			h4
				color $green
	&__date
		flex 0.3
		display flex
		flex-direction column
		justify-content center
		align-items center
		padding-right 30px
		min-height 144px
		border-right 1px solid $gray
		data
			font-size 30px
			color $green
			font-weight bold
			display inherit
		p
			color $dark
			font-size 16px	
			letter-spacing 1px
			margin-bottom 0
			margin 10px 5px 0px 5px
	&__type
		flex 1
		display flex
		flex-direction column
		justify-content center
		padding 0 30px
		color $dark
		h4
			text-transform uppercase
			letter-spacing 1px
		p
			display -webkit-box
			text-overflow ellipsis
			overflow hidden
			line-height 16px
			max-height 64px
			-webkit-line-clamp 2
			-webkit-box-orient vertical
				
	&-place
		display flex
		color lightness( $dark , 50%)
	&-time
		flex 0.2 0.2 auto
	&-link
		padding-right 30px
		margin-top 10px
		flex 0.3 
		a	
			text-align center
			text-transform uppercase
			display block
			width 100%
			height 100%
			background-color $green	
			color $white
			font-weight bold
			padding 10px 30px
			font-size 12px
			border-radius 30px
			text-decoration none
	&__more
		display flex
		justify-content center		
@media (max-width: 767px)
	.events__items 
		flex-direction column
		justify-content center
		align-items center
	.events__date
		border-right 0
		border-bottom 1px solid $gray
		padding-right 0