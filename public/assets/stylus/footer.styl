.footer
    display: flex
    padding: 0 100px
    border-top: 1px solid lighten($dark, 50%)
    margin 40px 0 0 0
    background-color $white
    +mobile()
        flex-direction: column
        align-items: center
        height: auto
        padding: 20px 10px
    &-copyright
        height: 60px
        padding: 10px
        text-align: center
        color: $dark
        vertical-align: middle
        line-height: 40px
        font-size 12px

    &-logo
        height: 60px
        padding: 10px
        flex 1
        img
            height: 100%
    &-social
        height: 60px
        padding: 10px
        display: flex
        justify-content: center
        align-items: center
        flex 1
    &-email
        height 60px
        padding 10px
        flex 1   
        input 
            border-radius 50px 
            border-color lightness( $dark , 50%)
        button
            border-color lightness( $dark , 50%)
            border-left 0
            color $dark
            border-radius 50px

.social
    color $dark
    padding: 5px
    margin: 0 10px
    

    &:hover
    &:focus
        color: $green

.icon
    width: 24px
    height: 24px
@media (max-width: 768px)
    .footer
        flex-direction column
        align-items center
        justify-content center