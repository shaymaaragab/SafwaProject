.events
	background-color $white
	padding 25px 0
	
	h2
		color $green
		text-transform capitalize
		text-align center
		padding 15px 0
	&__items
		display flex
		flex-wrap nowrap
		border 1px solid $gray
		align-items baseline	
		border-radius 2px
		padding 20px
		margin 25px 0
		h4
			color lightness( $gray , 50%)
		&:hover
			border-color $green
			h4
				color $green
	&__date
		flex 0.3 0.3 auto
		display flex
		flex-direction column
		justify-content center
		align-items center
		border-right 1px solid $gray
		padding-right 30px
		data
			font-size 20px
			color $green
			font-weight bold
		p
			color $gray
			font-size 16px	
			letter-spacing 1px
	&__type
		flex 1 1 auto
		display flex
		flex-direction column
		justify-content center
		padding 0 30px
		color $gray
		h4
			text-transform uppercase
			letter-spacing 1px
	&-place
		display flex
		color lightness( $gray , 50%)
	&-time
		flex 0.2 0.2 auto
	&-link
		padding-right 30px
		margin-top 10px
		flex 0.3 0.3 auto
		a	
			text-align center
			text-transform uppercase
			display block
			width 100%
			height 100%
			background-color $green	
			color $white
			font-weight bold
			padding 10px 30px
			font-size 12px
			border-radius 30px
			text-decoration none
	&__more
		display flex
		justify-content center		
			