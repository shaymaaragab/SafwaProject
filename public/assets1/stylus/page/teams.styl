.teams
	padding 25px 0
	h2
		text-align center
		color $green
		text-transform capitalize
		padding 20px 0
	&__type
		display flex
		flex-direction column
		justify-content center
		align-items center	
		img
			max-width 150px
			min-height 150px
			border-radius 50%	
			margin-bottom 10px
		h5
			text-transform capitalize
			color lightness( $gray , 40%)
			font-weight bold
			font-size 18px
			
		p
			text-transform capitalize
			color $gray
	&__social
		display flex
		justify-content center
		a
			text-decoration none
			color $gray
			margin-left 15px
			font-size 16px
			&:hover
			&:focus
				color $green
				text-decoration none	
	&__more
		display flex
		justify-content center
		padding 20px 0								
			