.medias
	background-color lightness( $gray , 30%)
	padding 25px 0
	h2
		padding 20px 0
		color $white
		text-transform capitalize
		text-align center
	&__post
		display flex
		margin 20px 0
			
	&__image
		position relative		
		top 0
		left 0
		bottom 0
		right 0
		flex 1 0 auto
		img 
			opacity 0.7
			height 100%
			width 100%
		a
			position absolute
			bottom 5px
			left 5px
			text-align center
			text-decoration none
			color $gray
			background-color $white
			width 30px
			height 30px
			line-height 30px
			border-radius 50%
			i
				margin-left 2px
	&__details
		padding 10px 15px
		background-color $white
		flex 1 1 auto
		data
			color lightness( $gray , 40%)
		h4
			color lightness( $gray , 40%)
			text-decoration capitalize	
		p
			color $gray
	&-show
		display flex
		justify-content center
		align-items baseline
		padding-top 20px 
		span
			color $gray
			font-size 16px
			display inline-block
			&:hover
				width 30px
				height 30px
				line-height 30px
				text-align center
				background-color lightness( $gray , 30%)
				color $white
				border-radius 50%
		a
			flex 1 1 auto
			text-decoration none
			text-transform capitalize
			font-size 16px
			color lightness( $gray , 30%)
			margin-left 20px
	&__slide
		position relative
		top 0
		left 0
		img
			width 100%
			opacity 0.8
		a
			position absolute
			bottom 50%
			left 50%
			text-align center
			text-decoration none
			color $gray
			background-color $white
			width 30px
			height 30px
			line-height 30px
			border-radius 50%
		p
			position absolute
			bottom 6px
			left 25%
			color $white
			font-size 16px
			letter-spacing 1px	
	&__more
		display flex
		justify-content center
		margin 40px 0
		a	
			border-color $white
			color $white
			&:hover
			&focus
				color $white	
		i
			border-left-color $white					
					
								