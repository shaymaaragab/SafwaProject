.footer
    display: flex
    padding: 0 100px
    border-top: 1px solid lighten($gray, 50%)
    height auto
    +mobile()
        flex-direction: column
        align-items: center
        height: auto
        padding: 20px 10px
    &-copyright
        flex: 1
        text-align: center
        color: $gray
        vertical-align: middle
        line-height: 40px

    &-logo
        display: flex
        justify-content: center
        align-items: center
        a
            text-decoration none
            p
                b:nth-child(2)
                    font-size 16px
            &:hover
                p
                    color $green
        p
            display flex
            flex-direction row
            justify-content center
            align-items center
            color $gray
            > b
                font-size 30px
           span
               display flex
               flex-direction column
               justify-content center
               align-items center
               margin-top 6px
               
    &-social
        display: flex
        justify-content: center
        align-items: center

.social
    color: $gray
    padding: 5px
    margin: 0 10px

    &:hover
    &:focus
        color: $green

.icon
    width: 24px
    height: 24px
